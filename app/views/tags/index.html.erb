<h1>Tags</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Links</th>
    </tr>
  </thead>

  <tbody>
    <% @tags.each do |tag| %>
      <tr>
        <td><%= link_to tag.name, tag %></td>
        <td><%= tag.links.count %></td>
      </tr>
    <% end %>
  </tbody>
</table>