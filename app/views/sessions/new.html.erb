<h1>Log in</h1>

<%= form_tag sessions_path do %>
  <div class="field">
    <label>Name</label>
    <%= text_field_tag :name, params[:name], class: "form-control", placeholder: "Name" %>
  </div>
  <div class="field">
    <label>Password</label>
    <%= password_field_tag :password, params[:password], class: "form-control", placeholder: "Password" %>
  </div>
  <div class="actions">
    <%= submit_tag "Log in", class: 'btn btn-default' %>
  </div>
<% end %>