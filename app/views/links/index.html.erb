<h1>Links</h1>

    <% @links.each do |link| %>
      <div class="entry">
        <div><%= link_to link.title, link.url %></div>
        <div><%= link.description %></div>
        <div>
          <% link.tags.each do |tag| %>
            <span class="label label-default"><%= tag.name %></span>
          <% end %>
          <span><%= link_to 'Show', link %></span>
          <span><%= link_to 'Edit', edit_link_path(link) %></span>
          <span><%= link_to 'Destroy', link, method: :delete, data: { confirm: 'Are you sure?' } %></span>
        </div>
      </div>
    <% end %>

<br>

<%= link_to 'New Link', new_link_path %>
