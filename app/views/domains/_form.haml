= form_for(@domain) do |f|
  - if @domain.errors.any?
    #error_explanation
      %h2
        = pluralize(@domain.errors.count, "error")
        prohibited this domain from being saved:
      %ul
        - @domain.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :description
    %br/
    = f.text_area :description, class: "form-control", placeholder: "Something descriptive", rows: 10
  .actions
    = f.button class: 'btn btn-sm btn-default', data: { disable_with: "<i class='fa fa-spinner fa-spin'></i> Updating..."}
