<h1>Domains</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Domain</th>
      <th>Description</th>
    </tr>
  </thead>

  <tbody>
    <% @domains.each do |domain| %>
      <tr>
        <td><%= link_to domain.domain, domain %></td>
        <td><%= domain.description %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Domain', new_domain_path %>
